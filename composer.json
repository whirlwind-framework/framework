{
    "name": "whirlwind-framework/framework",
    "description": "Whirlwind DDD micro framework",
    "keywords": [
        "framework",
        "ddd",
        "micro framework"
    ],
    "authors": [
        {
            "name": "Alexander Stepanenko",
            "email": "alex.stepanenko@gmail.com"
        }
    ],
    "type": "library",
    "license": "BSD-3-Clause",
    "require": {
        "php": "~7.4||>=8.0",
        "ext-mongodb": "*",
        "ext-json": "*",
        "league/route": "5.*",
        "laminas/laminas-diactoros": "2.*",
        "laminas/laminas-httphandlerrunner": "2.*",
        "league/container": "4.2.0",
        "psr/cache": "^1.0",
        "psr/http-client": "^1.0.x-dev",
        "ext-mbstring": "*",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.2",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "files": ["src/polyfill.php"],
        "psr-4": {
            "Whirlwind\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests"
        }
    }
}
